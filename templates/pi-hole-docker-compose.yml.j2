# {{ ansible_managed }}
---
version: "3"

networks:
  custom_private_network:
    external: true

# More info at https://github.com/pi-hole/docker-pi-hole/ and https://docs.pi-hole.net/
services:
  unbound:
    container_name: unbound
    image: mvance/unbound-rpi:latest
    networks:
      custom_private_network:
        ipv4_address: 10.0.0.2
    volumes:
      - ./etc-unbound/:/opt/unbound/etc/unbound
    ports:
      - "5053:{{ unbound.port }}/tcp"
      - "5053:{{ unbound.port }}/udp"
    restart: unless-stopped

  pihole:
    depends_on: [unbound]
    container_name: pihole
    image: pihole/pihole:latest
    hostname: '{{ pihole_hostname }}'
    ports:
      - "53:53/tcp"
      - "53:53/udp"
      - "67:67/udp"
      - "80:80/tcp"
      - "443:443/tcp"
    environment:
      TZ: '{{ pihole_timezone }}'
      DNSMASQ_LISTENING: 'local'
      WEBPASSWORD: '{{ pihole_password }}'
      ServerIP: '{{ ansible_facts['default_ipv4']['address'] }}'
      PIHOLE_DNS_: '10.0.0.2#{{ unbound.port }}'
    dns:
      - 127.0.0.1
      - 10.0.0.2 # Points to unbound
    volumes:
      - './etc-pihole/:/etc/pihole/'
      - './etc-dnsmasq.d/:/etc/dnsmasq.d/'
    cap_add:
      - NET_ADMIN
    restart: unless-stopped
    networks:
      custom_private_network:
        ipv4_address: 10.0.0.3

